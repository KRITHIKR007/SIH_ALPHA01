# Example environment configuration for DyslexiaCare
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=sqlite:///./src/dyslexia_platform/data/dyslexia_platform.db
# For PostgreSQL: postgresql://username:password@localhost/dyslexia_platform
# For MySQL: mysql://username:password@localhost/dyslexia_platform

# Security
ADMIN_TOKEN=your-secure-admin-token-here
SECRET_KEY=your-secret-key-change-this-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
DEBUG=false

# Frontend Configuration
FRONTEND_PORT=8501
API_BASE_URL=http://localhost:8000

# AI Model Configuration
WHISPER_MODEL=small  # Options: tiny, base, small, medium, large
OCR_LANGUAGES=en     # Comma-separated: en,es,fr,de
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# File Paths (relative to project root)
UPLOAD_DIR=src/dyslexia_platform/data/uploads
OUTPUT_DIR=src/dyslexia_platform/data/outputs
MODELS_DIR=src/dyslexia_platform/data/models
LOGS_DIR=logs

# CORS Settings (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501
# For development, use: ALLOWED_ORIGINS=*

# Application Settings
APP_NAME=DyslexiaCare
APP_VERSION=1.0.0

# File Upload Settings
MAX_FILE_SIZE=50MB
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development
DEBUG=true
TESTING=false

# Railway/Production Settings (Optional)
# PORT=8000
# DATABASE_URL=postgresql://user:password@host:port/db
# REDIS_URL=redis://localhost:6379